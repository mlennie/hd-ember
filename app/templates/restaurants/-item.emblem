			.gold-border 10%
		.col-sm-8.restaurant-img-container
			img.restaurant-search-pic src={restaurant.imgUrl} 
		.col-sm-4#restaurant-list-info
			h4.medium.restaurant-title-container
				span.restaurant-title 
					=restaurant.name
