.container-fluid.fixed-nav
	nav.navbar.navbar-default class={session.isAuthenticated:transparent navbarClass} role="navigation"
		.container-fluid
			.navbar-header
				button.navbar-toggle.collapsed class=collapseButton type="button" data-toggle="collapse" data-target="#navbar-collapse-1"
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				#logo-link
					a click=goToIndex
						h3 id={logoClass} Happy Dining
			.hidden-xs
				ul.nav.navbar-nav.navbar-right
					if session.isAuthenticated
						li.dropdown
							a.dropdown-toggle href="#" data-toggle="dropdown" role="button" aria-expanded="false"
								span.nav-icon = fa-icon 'caret-down'
								span.nav-item Mon compte
							ul.dropdown-menu#main-nav-dropdown role="menu"
								li = link-to 'users.mes-euros' 
									if session.currentUser.isOwner
										| Ma balance
									else
										| Mes Euros Collectés
								li = link-to 'users.edit' | Mon Profil
								li = link-to 'users.parrainer-un-ami' | Parrainer un ami  
								li.divider
								li
									a{action 'invalidateSession'} Se déconnecter
					else
						li class={navbarClass}
							a#concept-link click=jumpToConcept
								| Le Concept 
						li class={navbarClass} #{ link-to 'login' | Connection }
						li class={navbarClass} #{ link-to 'register' | Inscription }
			.visible-xs-block
				.collapse.navbar-collapse#navbar-collapse-1
					ul.nav.navbar-nav.navbar-right
						if session.isAuthenticated
							li = link-to 'users.mes-euros' 
								if session.currentUser.isOwner
									| Ma balance
								else
									| Mes Euros Collectés
							li = link-to 'users.edit' | Mon Profil
							li = link-to 'users.parrainer-un-ami' | Parrainer un ami 
							li
								a{action 'invalidateSession'} Se déconnecter
						else
							li class={navbarClass}
								a#concept-link click=jumpToConcept
									| Le Concept
							li class={navbarClass} #{ link-to 'login' | Connection }
							li class={navbarClass} #{ link-to 'register' | Inscription }
	= partial 'application-partials/search-bar' 
